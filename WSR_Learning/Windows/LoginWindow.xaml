<Window x:Class="WSR_Learning.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WSR_Learning.Windows"
        mc:Ignorable="d"
        Title="Лаборатория №20 - окно входа" Height="300" Width="450" MaxHeight="300" MaxWidth="450" WindowStartupLocation="CenterScreen" Icon="/Pictures/logo.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Image Source="/Pictures/logo.png" Grid.Row="0" RenderOptions.BitmapScalingMode="HighQuality"/>
        <UniformGrid Columns="2" Grid.Row="1">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Логин" FontFamily="Comic Sans MS" FontSize="24"/>
            <TextBox x:Name="loginTxt" Width="170" Height="40" FontSize="24"/>
            <TextBlock Text="Пароль" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Comic Sans MS" FontSize="24"/>
            <PasswordBox x:Name="passwordPB" Width="170" Height="40" FontSize="24"></PasswordBox>
        </UniformGrid>
        <Button x:Name="loginBtn" Content="Войти" Grid.Row="2"/>    
    </Grid>
</Window>
